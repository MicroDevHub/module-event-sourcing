{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "declaration": true,
  },
  "include": [
    "lib/**/*.ts",
    "test-tool/*.ts"
  ],
  "exclude": ["node_modules", "build"]
}
